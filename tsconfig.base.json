{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@joseph/code-utils": ["shared/code-utils/src/index.ts"],
      "@joseph/config": ["shared/config/src/index.ts"],
      "@joseph/prisma-shared": ["shared/prisma-shared/src/index.ts"],
      "@joseph/trpc-shared": ["shared/trpc-shared/src/index.ts"],
      "@joseph/types": ["shared/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
